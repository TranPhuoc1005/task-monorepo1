{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "components/*",
        "lib/*",
        "hooks/*",
        "app/*",
        "assets/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/constants/*": [
        "constants/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@taskpro/shared": [
        "../../packages/shared/src"
      ],
      "@taskpro/shared/*": [
        "../../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
